                            <!-- Modal -->
                        </div>
                    </div>
                </div>
                <hr />
                <div>
                    <h5>Du lịch trên Sông Hương</h5>
                    <div class="row place-related ">
                        <div class="col-sm-4"><img src="~/Content/images/huemua.jpg" class="img-fluid"></div>
                        <div class="col-sm-4">
                            <p>
                                <strong>Ngày khởi hành: </strong>01/02/2020<br>
