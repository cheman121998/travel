@model IEnumerable<travel.Models.Post>
<link href="~/Content/sb-admin-2.min.css" rel="stylesheet">
<link href="~/Content/dataTables.bootstrap4.min.css" rel="stylesheet">
@{
    ViewBag.Title = "Index";
}

<style>


    footer, #mainNav {
        display: none;
    }

    .footer-copyright {
        display: none;
    }
</style>

<div id="wrapper">

    <!-- Sidebar -->
    @Html.Partial("Sidebar")
    <!-- End of Sidebar -->
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <!-- Topbar -->
            @Html.Partial("HeaderAdmin")
            <!-- End of Topbar -->
            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <h1 class="h3 mb-0 text-gray-800">Quản Lý Bài Viết</h1>
                    <a class="btn btn-primary d-sm-inline-block d-none shadow-sm" href="/admin/createpost"><i class="fas fa-plus"></i> Tạo bài viết mới</a>
                </div>

                <div class="card shadow mb-4">

                    @{
                        ViewBag.Title = "Bài viết";
                    }
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Danh sách bài viết</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th style="max-width: 200px;">
                                            Ảnh
                                        </th>
                                        <th style="max-width: 300px;">
                                            Tiêu đề
                                        </th>
                                        <th>
                                            Thể loại
                                        </th>

                                        <th>
                                            Thời gian tạo
                                        </th>

                                        <th style="width: 70px;"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>

                                            <td style="max-width: 200px;max-height: 100px">
                                                <img style="width:100%" src="@item.Image" />
                                            </td>
                                            <td style="max-width: 300px;">
                                                @Html.DisplayFor(modelItem => item.Title)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Category.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CreatedAt)
                                            </td>
                                            <td style="width: 70px;">
                                                <a href="/admin/EditPost/@item.Id" class="btn btn-sm btn-primary"><i class="fas fa-pen"></i></a>
                                                <a href="/admin/DeletePost/@item.Id" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>

                </div>
            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->
        <!-- Footer -->
        <footer class="sticky-footer bg-white">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright &copy; Your Website 2019</span>
                </div>
            </div>
        </footer>
        <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->


<script src="~/Scripts/sb-admin-2.min.js"></script>
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/dataTables.bootstrap4.min.js"></script>


<!-- Page level plugins -->
<script src="~/Scripts/Chart.min.js"></script>

<!-- Page level custom scripts -->
<script>
    $(document).ready(function () {
        $('#dataTable').DataTable();
    });
</script>

