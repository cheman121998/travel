@model travel.Models.Tour

<link href="~/Content/sb-admin-2.min.css" rel="stylesheet">
<style>


    footer, #mainNav {
        display: none;
    }
    .footer-copyright{
        display: none;
    }
</style>

<div id="wrapper">

    <!-- Sidebar -->
    @Html.Partial("Sidebar")
    <!-- End of Sidebar -->
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <!-- Topbar -->
            @Html.Partial("HeaderAdmin")
            <!-- End of Topbar -->
            <!-- Begin Page Content -->
            <div class="container-fluid mb-5">

                <!-- Page Heading -->
               
                    <div>
                        <h2>Tạo mới bài viết</h2>
                    </div>
                

                <div class="card">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-horizontal m-5">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group row">
                                <label class="control-label col-md-2" for="Name">Tour du lịch</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="control-label col-md-2" for="Policy">Chính sách</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Policy, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Policy, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="control-label col-md-2" for="Schedule">Lịch trình</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Schedule, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Schedule, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="control-label col-md-2" for="DateStart">Ngày bắt đầu</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.DateStart, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.DateStart, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="control-label col-md-2" for="Destination">Nơi đến</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Destination, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Destination, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="control-label col-md-2" for="DeparturePlace">Địa điểm xuất phát</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.DeparturePlace, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.DeparturePlace, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="control-label col-md-2" for="CategoryTourId">Loại tour</label>
                                <div class="col-md-10">
                                    @Html.DropDownList("CategoryTourId", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.CategoryTourId, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="control-label col-md-2" for="Image">Hình ảnh</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-2" for="Price">Giá tiền</label>
                                <div class="col-md-10">
                                    <input class="form-control text-box single-line" id="Price" name="Price" type="number" step="2" min="10" max="10000" value="100">
                                    @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Tạo mới" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->
        <!-- Footer -->
        <footer class="sticky-footer bg-white">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright &copy; Your Website 2019</span>
                </div>
            </div>
        </footer>
        <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<script src="~/Scripts/sb-admin-2.min.js"></script>

<!-- Page level plugins -->
<script src="~/Scripts/Chart.min.js"></script>

<!-- Page level custom scripts -->
<script src="~/Scripts/chart-area-demo.js"></script>
<script src="~/Scripts/chart-pie-demo.js"></script>
