        <div class="contact text-left">
            <h6>Our Information</h6>
            <h2>Contact Us</h2>
        </div>
        <div class="row">
            <div class="col-6">
                <form action="mail" method="post" class="mt-5">

                    <div class="form-group">
                        <label for="name">Your name</label>
                        <input type="text" class="form-control" id="name" placeholder="Man Man">
                    </div>
                    <div class="form-group">
                        <label for="email">Your email</label>
                        <input type="email" class="form-control" id="email" placeholder="manman123@gmail.com">
                    </div>
                    <div class="form-group">
                        <label for="subject">Subject</label>
                        <input type="text" class="form-control" id="subject" placeholder="">
                    </div>

                    <div class="form-group">
                        <label for="message">Message</label>
                        <textarea class="form-control" id="messageTextArea" rows="3"></textarea>
                    </div>
                    <button type="submit" value="send" class="btn btn-warning text-white text-center">Submit</button>

                </form>
            </div>
            <div class="col-6">
                <img src="~/Content/images/map.jpg" alt="Alternate Text" class="img-fluid object-fit-cover mt-5 pt-4" />
            </div>
        </div>
        <div class="row text-center mt-5">
            <div class="col-4">
                <i class="fas fa-map-marker-alt"></i>
                <h4>Our Location</h4>
                <p>99 Ho Dac Di</p>
                <p>Thanh pho Hue - Thua Thien Hue</p>
            </div>
            <div class="col-4 border-left border-right">
                <i class="fas fa-phone"></i>
                <h4>Contact Us</h4>
                <p>Telephone: 0123 2303 228</p>
                <p>Email: heutravel@gamil.com</p>
            </div>
            <div class="col-4">
                <i class="far fa-clock"></i>
                <h4>Working Time</h4>
                <p>Monday - Friday: 9:00AM -19:00PM</p>
                <p>Sunday Close</p>
            </div>

        </div>
    </div>
