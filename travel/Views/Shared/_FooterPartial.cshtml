@model travel.Models.HomeModelView

@{
    var foods = Model.Foods;
    var places = Model.Places;
    var tours = Model.Tours;
}

    <div class="row">
        <div class="col-sm-3 col-md-3 col-lg-3">
            <h5>Địa điểm du lịch nổi bật</h5>
           
            <div class="container-fluid">
               
                <div class="row">
                    @foreach (var item in places)
                    {
                        <a class="pr-4 pb-2" href="/Post/Details/@item.Id"><img src="@item.Image" alt="Alternate Text" class="img-fluid object-fit-cover" /></a>
                    }
                </div>
               
            </div>
           
        </div>
        <div class="col-sm-3 col-md-3 col-lg-3">
            <h5>Ẩm thực Huế</h5>
            <div class="container-fluid">
                <div class="row">
                        @foreach (var item in foods)
                        {
                            <a class="pr-4 pb-2" href="/Posts/Details/@item.Id"><img src="@item.Image" alt="Alternate Text" class="img-fluid object-fit-cover" /></a>
                        }
                </div>
           </div>
        </div>
        <div class="col-sm-3 col-md-3 col-lg-3">
            <h5>Tours</h5>
            <div class="container-fluid">
                <div class="row">
                        @foreach(var item in tours)
                        {
                        <a class="pr-4 pb-2" href="/Tours/Details/@item.Id">
                            <img src="@item.Image" alt="Alternate Text" class="img-fluid object-fit-cover" />
                        </a>
                        }
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-3 col-lg-3 contact">
            <a href="/Home">
                <img src="~/Content/images/logo.jpg" alt="Alternate Text" class="img-fluid object-fit-cover" style="width: auto; margin-left: 60px;" />
            </a>
            <div class="row">
                <div class="col-6">
                    <div class="d-flex">
                        <div class="m-1"><i class="fas fa-map-marker-alt"></i></div>
                        <p class="m-1">99 Ho Dac Di</p>
                    </div>
                    <p>Thành phố Huế</p>
                </div>
                <div class="col-6 border-left">
                    <div class="d-flex">
                        <i class="fas fa-phone m-1"></i>
                        <p class="m-1">0123228</p>
                    </div>
                    <p>Phone me</p>
                </div>
            </div>
            <hr class="bg-white m-0 mb-1" />
            <div class="">
                <div class="d-flex">
                    <i class="far fa-clock m-1"></i>
                    <p class="m-1">Monday-Sartuday: 9:00 -19:00</p>
                </div>
                <p class="text-center">Sunday closed</p>
            </div>
        </div>
    </div>
