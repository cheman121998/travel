@model travel.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Quên mật khẩu";
}

<style>
   
</style>
<div class="container m-5 password" 
     style="background-image: url('/Content/images/pass.jpg'); 
            background-repeat: no-repeat;
            width: 150%;
            height: 1000px;">
    <div class="m-5 border bg-white w-50">
        <h2 class="mt-5 ml-5">@ViewBag.Title.</h2>

        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4 class="mt-5 ml-5">Nhập email.</h4>
            
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group ml-5" style="width: 500px;">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group ml-5">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Email Link" />
                </div>
            </div>
        }

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
