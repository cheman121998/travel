@model travel.Models.Post
    @using travel.Models
@{
    ViewBag.Title = Model.Title;

}

<body class="post">
    <section class="banner-post mb-5">
        <div class="black-cover-2">
            <div class="title-post">
                <div>
                    <h1>@Model.Title</h1>
                    <h6 class="text-white" style="font-weight: 600; font-size: 20px;">@Html.ActionLink("HOME", "Index", "Home")</h6>
                </div>
            </div>
        </div>
        <img src="@Model.Image" alt="Alternate Text" class="cover-image" />
    </section>
    <section class="content">
        <div class="travelTour mt-5 mb-5">
            <div class="container">
                <div class="row">
                    @* Load partial post relations *@
                    @Html.Action("RelatedPosts", "Post")

                    <div class="col-sm-12 col-md-8 col-lg-8">
                        <div class="title">
                            <h3 class="mt-3">@Model.Title</h3>
                            <br />
                            <div class="container">
                                <div class="row">
                                    <div class="d-flex pr-3">
                                        <div class="pr-1"><i class="far fa-calendar-alt"></i></div>
                                        @*<div>@post.UpdatedAt.ToShortDateString()</div>*@
                                    </div>
                                    <div class="d-flex pr-3">
                                        <div class="pr-1"><i class="fas fa-eye"></i></div>
                                        <div> 123</div>
                                    </div>
                                    <div class="d-flex p-2 btn btn-primary">
                                        <div class="pr-1"><i class="far fa-thumbs-up"></i></div>
                                        <div>Thích 34</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="post-food">
                            <div>
                                @Html.Raw(Model.Content)
                            </div>
                        </div>
                        <hr />
                        <section class="comment">
                            <div class="container row" style="justify-content: space-between;">

                                <div> 1 bình luận </div>

                                <div class="row">
                                    <div class="pr-1">Sắp xếp theo:</div>
                                    <select>
                                        <option selected>Choose...</option>
                                        <option value="1">Mới nhất</option>
                                        <option value="2">Cũ nhất</option>

                                    </select>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>

